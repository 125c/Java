package Hello;

public class Time1test {

	public static void main(String[] args) {
		// TODO 自動產生的方法 Stub
		Time1 t=new Time1(18,36,27);
		System.out.print("已建立新的 Time1 物件，時間內容："+t.toUniversalString());
		t.setTime1(5, 25, 26);
		System.out.print("已建立新的 Time1 物件，時間內容："+t.toUniversalString());
		
		try {
			t.setTime1(69,15, 30);
			System.out.print("修改 Time1 物件，時間內容："+t.toUniversalString());
		}catch(IllegalArgumentException ex) {
			System.out.print("企圖修改 Time1 物件，發生例外狀況："+t.toUniversalString());
		}

	}

}
