package Hello;

public class Date {
	private int year; //>0&&<now
	private int month;//1-12
	private int day;//1-31
	private static final int[] daysPerMonth= {0,31,28,31,30,31,30,31,31,30,31,30,31};
	public Date(int year,int month,int day) {
		if((year<0)||(year>=24)) {
			throw new IllegalArgumentException("輸入的 \"年\"時間錯誤，0-？:");
		}
		if((month<0)||(month>=12)) {
			throw new IllegalArgumentException("輸入的 \"月\"時間錯誤，1-12:");
		}
		if((day<0)||(day>=31)) {
			throw new IllegalArgumentException("輸入的 \"日\"時間錯誤，1-31:");
		}
	}
}
